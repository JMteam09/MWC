<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estimote.notification.MainActivity">

    <ImageView
        android:id="@+id/imageView_header"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#33000000" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="-15dp"
        android:id="@+id/imageViewLogo" />

    <View
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView_header"
        android:background="@color/colorPrimary"/>

    <TextView
        android:text="Welkom op de open dag van het Maaswaal College locatie Veenseweg!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/imageView_header"
        android:layout_alignParentStart="true" />

    <Button
        android:text="VAKKEN"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_message"
        android:id="@+id/buttonVakken"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <Button
        android:text="ROUTE"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonVakken"
        android:id="@+id/button2"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <Button
        android:text="PROGrAMMA"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:id="@+id/button3"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <Button
        android:text="MENTOREN"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:id="@+id/button4"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

</RelativeLayout>
